<Window x:Class="WpfUser.WinLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUser"
        mc:Ignorable="d"
        Title="WinLogin" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Login" FontSize="24" HorizontalAlignment="Center" Margin="10" />
        <Label Content="Gebuikersnaam" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top"/>
        <Label Content="Wachtwoord" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxbGebruikersnaam"  HorizontalAlignment="Center" Margin="0,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <PasswordBox x:Name="PwbWachtwoord" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="BtnAanmelden" Content="Aanmelden" HorizontalAlignment="Center" Margin="0,311,0,0" VerticalAlignment="Top" Click="BtnAanmelden_Click"/>
        <TextBlock x:Name="ErrorMessage" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="Red" Margin="10" />
    </Grid>
</Window>
